<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="1dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
           android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_person"
                android:tint="@color/green"
                android:src="@drawable/ic_person_pin_white_18dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_who"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:text="TomRidder"
                android:layout_toRightOf="@+id/iv_person"
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_margin="3dp"
            android:id="@+id/tv_title"
            android:text="一个垂直方向的DrawerLayout,抽屉从上向下展开"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#494949"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_type"
            android:tint="@color/green"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_android_white_18dp"
            android:padding="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/tv_type"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/iv_type"
            android:layout_centerVertical="true"
            android:text="Android"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:tint="@color/green"
            android:layout_toLeftOf="@id/tv_time"
            android:src="@drawable/ic_access_time_white_48pt"
            android:padding="2dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_time"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:text="2019年7月1日"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>